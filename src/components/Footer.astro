---
import { Image } from "astro:assets";
import designoLogo from "assets/shared/desktop/logo-light.png";
import facebookLogo from "assets/shared/desktop/icon-facebook.svg";
import youtubeLogo from "assets/shared/desktop/icon-youtube.svg";
import twitterLogo from "assets/shared/desktop/icon-twitter.svg";
import pinterestLogo from "assets/shared/desktop/icon-pinterest.svg";
import instagramLogo from "assets/shared/desktop/icon-instagram.svg";

import { menu } from "data/menu.js";
---

<footer
  class={`bg-black text-white ${Astro.url.pathname === "/contact" ? "pt-16 lg:pt-18" : "pt-64  md:pt-52"} px-6 pb-16 md:px-10 lg:px-20 lg:pb-18 xl:px-40`}
>
  <div class="md:flex md:justify-between md:items-center">
    <Image
      src={designoLogo}
      alt="Designo Logo"
      class="h-7 w-50 mx-auto md:mx-0"
    />
    <div class="border-b-1 border-gray-500 mt-6 md:hidden"></div>
    <ul class="flex flex-col items-center mt-8 mb-10 gap-8 md:flex-row">
      {
        menu.map((m) => (
          <a href={m.url} class="text-sm">
            {m.name}
          </a>
        ))
      }
    </ul>
  </div>
  <div class="md:border-b-1 md:border-gray-500"></div>

  <div class="md:flex md:justify-between md:items-end md:mt-10">
    <div class="opacity-50 flex flex-col items-center mb-10 md:mb-0">
      <h3 class="text_body font-bold">Designo Central Office</h3>
      <p class="text_body">
        3886 Wellington Street
        <br />
        Toronto, Ontario M9C 3J5
      </p>
    </div>

    <div class="opacity-50 flex flex-col items-center mb-10 md:mb-0 xl:pr-40">
      <h3 class="text_body font-bold">Contact Us (Central Office)</h3>
      <p class="text_body">
        P: (+1) 253-863-8967
        <br />
        M: contact@designo.co
      </p>
    </div>

    <ul class="flex justify-center gap-4">
      <li><a href="#"><Image src={facebookLogo} alt="facebook" /></a></li>
      <li><a href="#"><Image src={youtubeLogo} alt="youtube" /></a></li>
      <li><a href="#"><Image src={twitterLogo} alt="twitter" /></a></li>
      <li><a href="#"><Image src={pinterestLogo} alt="pinterest" /></a></li>
      <li><a href="#"><Image src={instagramLogo} alt="instagram" /></a></li>
    </ul>
  </div>
</footer>
