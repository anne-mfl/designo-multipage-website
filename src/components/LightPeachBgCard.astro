---
const { title, desc } = Astro.props;
---

<div
  class="bg-[url(src/assets/shared/desktop/bg-pattern-three-circles.svg)]
    bg-no-repeat
    text-center py-20 px-6  md:py-16 md:px-14
    bg-very_light_peach md:rounded-b-2xl"
>
  <h1 class="text_h1 text-peach mb-6">{title}</h1>
  <p class="text_body text-[15px]">
    {
      desc.split("<br>").map((line: string, index: number) => (
        <>
          {line
            .split(/(<b>.*?<\/b>)/g)
            .map((part, i) =>
              part.startsWith("<b>") && part.endsWith("</b>") ? (
                <b>{part.slice(3, -4)}</b>
              ) : (
                part
              ),
            )}
          {index < desc.split("<br>").length - 1 && <br />}
        </>
      ))
    }
  </p>
</div>
