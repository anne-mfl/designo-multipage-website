---
import Layout from "layouts/Layout.astro";
import { Image } from "astro:assets";
import heroPhoneImage from "assets/home/desktop/image-hero-phone.png";
import backgroundPattern from "assets/home/desktop/bg-pattern-hero-home.svg";
import Services from "components/Services.astro";
import Values from "components/Values.astro";
import GetInTouch from "components/GetInTouch.astro";
import Footer from "components/Footer.astro";
const pageTitle = "Designo Home";
---

<Layout pageTitle={pageTitle}>
  <div
    class="bg-peach text-white bg-[url(src/assets/home/desktop/bg-pattern-hero-home.svg)] bg-[position:-10px_80px] bg-cover bg-no-repeat flex flex-col items-center justify-center text-center pt-20"
  >
    <div class="px-6">
      <h1 class="text_h1 mb-4">
        Award-winning custom designs and digital branding solutions
      </h1>
      <p class="text_body mb-6">
        With over 10 years in the industry, we are experienced in creating fully
        responsive websites, app design, and engaging brand experiences. Find
        out more about our services.
      </p>
      <a href="/about" class="z-10 relative">
        <button class="btn_white">LEARN MORE</button>
      </a>
    </div>
    <Image
      src={heroPhoneImage}
      alt="Hero Smartphone"
      class="overflow-hidden object-none object-top -mt-20"
    />
  </div>

  <div class="h-30"></div>

  <Services />

  <div class="h-30"></div>

  <Values />
</Layout>
